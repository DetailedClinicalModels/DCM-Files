  <valueSet name="BarthelIndexConcepts">
    <code code="273302005" displayName="Barthel index (assessment scale)" codeSystemName="SNOMED CT" codeSystem="2.16.840.1.113883.6.96" />
    <code code="BrtlD550" displayName="Feeding" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD530" displayName="Toilet use" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD460" displayName="Stairs" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD520" displayName="Grooming" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD510" displayName="Bathing" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlB525" displayName="Bowels" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="419892001" displayName="| Barthel index score (observable entity) |" codeSystemName="Snomed CT" codeSystem="2.16.840.1.113883.6.96" />
    <code code="BrtlD450" displayName="Mobility" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD420" displayName="Transfers" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlB620" displayName="Bladder" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
    <code code="BrtlD540" displayName="Dressing/undressing" codeSystemName="R4CBarthel" codeSystem="2.16.840.1.113883.3.3210.10.1" />
